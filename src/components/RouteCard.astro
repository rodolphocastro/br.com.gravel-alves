---
import { convertDifficultyToRating } from "../utils";

interface Props {
  title: string;
  description: string;
  rating: number;
  stravaUrl: string;
  komootUrl: string;
  km: number;
  altGain: number;
}

const { title, description, rating, stravaUrl, komootUrl, km, altGain } =
  Astro.props;
---

<div
  class="mx-auto max-w-sm rounded overflow-hidden shadow-lg bg-white border-2 border-gray-700 hover:shadow-2xl"
>
  <div class="px-6 py-4">
    <div class="font-bold text-xl mb-2">{title}</div>
    <div class="flex space-x-2 mb-2">
      <div
        class="bg-blue-100 text-blue-800 text-xs font-semibold mr-2 px-2.5 py-0.5 rounded"
      >
        🚴🏻‍♂️ {km} km
      </div>
      <div
        class="bg-green-100 text-green-800 text-xs font-semibold mr-2 px-2.5 py-0.5 rounded"
      >
        ⛰️ {altGain} m
      </div>
      <p
        class="bg-red-100 text-red-800 text-xs font-semibold mr-2 px-2.5 py-0.5 rounded"
      >
        👀 {convertDifficultyToRating(rating)}
      </p>
    </div>
    <p class="text-gray-700 text-base mb-4">
      {description}
    </p>
    <div class="flex space-x-2 text-sm">
      <a
        href={stravaUrl}
        target="_blank"
        class="bg-orange-500 hover:bg-orange-700 text-white font-bold py-2 px-4 rounded"
      >
        GPX - Strava
      </a>
      <a
        href={komootUrl}
        target="_blank"
        class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded"
      >
        GPX - Komoot
      </a>
    </div>
  </div>
</div>
