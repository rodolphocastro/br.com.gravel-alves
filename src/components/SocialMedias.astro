---
import SocialMediaItem from "./SocialMediaItem.astro";
import { getCollection } from "astro:content";

const socials = await getCollection("socials");
---

<footer class="flex flex-col items-center justify-center">
  <h2 class="border-t-2 border-black mt-4 text-xl">Redes Sociais</h2>
  <section class="text-sm max-w-[400px] text-center mb-4">
    <p>Me siga nas redes sociais ğŸ‘‡ğŸ»</p>
  </section>
  <ul class="flex gap-4 items-center justify-center flex-wrap">
    {
      socials
        .sort((a, b) => b.data.order - a.data.order)
        .map((social) => (
          <SocialMediaItem url={social.data.url} icon={social.data.icon} />
        ))
    }
  </ul>
</footer>
