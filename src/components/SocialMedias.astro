---
import { getCollection } from "astro:content";
import SocialIcon from "./SocialIcon.astro";

const socials = await getCollection("socials");
---
<h2 class="border-t-2 border-black mt-4 text-lg mb-2">Redes Sociais</h2>
<ul class="flex gap-4 items-center justify-center flex-wrap">
  {
    socials.sort((a, b) => {
      if (a.data.order < b.data.order) {
        return -1;
      }
      if (a.data.order > b.data.order) {
        return 1;
      }
      return 0;
    }).map((social) => (
      <li class=" border-black border-2 rounded-full">
        <a href={social.data.url} class="block p-4">
          <SocialIcon id={social.data.icon[0]}>
        </a>
      </li>
    ))
  }
</ul>